<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_location_value"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_text" />

    <ListPreference
        android:entries="@array/preference_units_entries"
        android:entryValues="@array/preference_units_values"
        android:title="@string/preference_units_title"
        android:key="@string/pref_units_key"
        android:defaultValue="0"/>



</PreferenceScreen>